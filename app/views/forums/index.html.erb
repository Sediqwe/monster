<p id="notice"><%= notice %></p>

<h1>Forums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.title %></td>
        <td><%= forum.desc %></td>
        <td><%= forum.user_id %></td>
        <td><%= forum.active %></td>
        <% if current_user.present? %>
          <% if current_user.admin? %>
            <td><%= link_to 'Show', forum %></td>
            <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
            <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>    
        <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.present? %>
  <%= link_to 'New Forum', new_forum_path if current_user.admin? %>
<% end %>
