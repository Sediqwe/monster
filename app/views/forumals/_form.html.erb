
<%= simple_form_for(@forumal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.association :user %>
    <%= f.input :active %>
    <%= f.association :forum %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
